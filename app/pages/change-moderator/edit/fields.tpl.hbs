<div class="form-group">
    <label for="{{id}}-old-box-id">Box</label>
    <input type="hidden" class="form-control {{id}}-field" id="{{id}}-box-id" name="boxId" value="{{data.boxId}}" />
    <span class="help-block" id="{{id}}-old-box-id-message"></span>
</div>

<div class="form-group">
    <label for="{{id}}-script">Script to run</label>
    <input type="hidden" class="form-control {{id}}-field" id="{{id}}-script-id" value="{{data.scriptId}}" />
    <span class="help-block" id="{{id}}-script-message"></span>
</div>

<div class="form-group" id="{{id}}-device-group">
    <label for="{{id}}-device">Device</label>
    <input type="hidden" class="form-control {{id}}-field" id="{{id}}-device-id" value="{{data.deviceId}}" />
    <span class="help-block" id="{{id}}-device-message"></span>
</div>