<div class="page-header">
  <h1>{{#if data.id}}Edit Job{{else}}New Job{{/if}}</h1>
</div>

<form 
    id="{{id}}-form" 
    role="form" 
    class="well well-sm"
    data-bv-message="This value is not valid"
    data-bv-feedbackicons-valid="glyphicon glyphicon-ok"
    data-bv-feedbackicons-invalid="glyphicon glyphicon-remove"
    data-bv-feedbackicons-validating="glyphicon glyphicon-refresh"
    data-bv-submitbuttons="#{{id}}-save"
    data-bv-live="enabled">
    
    <div class="form-group">
        <label for="{{id}}-old-url">Old Version URL</label>
        <input type="hidden" class="form-control" id="{{id}}-old-url" name="oldUrl" value="{{data.oldBoxId}}"/>
        <span class="help-block" id="{{id}}-old-url-message"></span>
    </div>
    
    <div class="form-group">
        <label for="{{id}}-new-url">New Version URL</label>
        <input type="hidden" class="form-control" id="{{id}}-new-url"   value="{{data.newBoxId}}"/>
        <span class="help-block" id="{{id}}-new-url-message"></span>
    </div>
    
    <div class="form-group">
        <label for="{{id}}-script">Script to run</label>
        <input type="hidden" class="form-control" id="{{id}}-script"  value="{{data.scriptId}}"/>
        <span class="help-block" id="{{id}}-script-message"></span>
    </div>
    
    <div class="form-group">
        <label for="{{id}}-device" >Device</label>
        <input type="hidden" class="form-control" id="{{id}}-device"   value="{{data.deviceId}}"/>
        <span class="help-block" id="{{id}}-device-message"></span>
    </div>
    
    <button type="button" id="{{id}}-save" class="btn btn-primary btn-lg ladda-button" data-style="zoom-in"><span class="ladda-label"><i class="fa fa-save"></i> Save</span></button>
    <button type="button" id="{{id}}-cancel" class="btn btn-link"><i class="fa fa-remove"></i> Cancel</button>
</form>